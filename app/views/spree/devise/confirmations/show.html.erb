<h2><%= t("activate_your_account")%></h2>

<%= form_for resource, url: update_spree_user_confirmation_path, method: :put, html: {id: 'activation-form'} do |f| %>
  <%= devise_error_messages! %>
  <fieldset>
    <legend>Zvolte heslo pro účet<% if resource.try(:login) %> <%= resource.login %><% end %></legend>

  <% if @requires_password %>
      <p><%= f.label :password, Spree.t(:password) %> <%= f.password_field :password %></p>
      <p><%= f.label :password_confirmation, Spree.t(:confirm_password) %> <%= f.password_field :password_confirmation %></p>
  <% end %>
  <%= hidden_field_tag :confirmation_token, @confirmation_token %>
  <p><%= f.submit Spree.t(:activate) %></p>
  </fieldset>
<% end %>